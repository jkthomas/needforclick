#:import utils kivy.utils

<TimeLabel@Label>:

<NumberButton@Button>:
    font_size: 30

<SettingsLayout@BoxLayout>:
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#660066')
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: "horizontal"
    size_hint_y: 0.1

<Break@BoxLayout>:
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#660066')
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint_y: 0.1

<GameBoardLayout@GridLayout>:
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#000000')
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: "vertical"
    size_hint_y: 0.8
    cols: 3

<ScreenLayout@BoxLayout>:
    orientation: "vertical"

<MainScreen@Screen>: